{% extends theme_path ~ "/template-base.twig" %}

{% block head %}
    <link href="{{ twg_func( "base_url") }}assets/plugins/charts-c3/plugin.css" rel="stylesheet" />
    <script src="{{ twg_func( "base_url") }}assets/plugins/charts-c3/plugin.js"></script>
{% endblock %}

{% block content %}
    <main id="main" role="main" class="my-3 my-md-5">
        <div class="container">
            <div class="page-header">
                <h1 class="page-title">{{ pageTitle }}: {{ userName }}</h1>
            </div>

            <div class="row">
                <div class="col-md-10">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="card-title">Perfil completo:</h3>
                            <div class="row">
                                <div class="col-md-2">
                                    <span class="avatar" style="background-image: url({{ twg_func( 'base_url' ) }}assets/images/demo/faces/{{ face }}.jpg)"></span>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <span>NOMBRE: </span>
                                        <span>{{ userDetails.first_name ?: 'Desconocido' }}</span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-md-offset-2">
                                    <div class="form-group">
                                        <span>APELLIDOS: </span>
                                        <span>{{ userDetails.last_name ?: 'Desconocido' }}</span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-md-offset-2">
                                    <div class="form-group">
                                        <span>EMAIL: </span>
                                        <span>{{ userDetails.email }}</span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-md-offset-2">
                                    <div class="form-group">
                                        <span>FECHA DE REGISTRO: </span>
                                        <span>{{ userDetails.registrationDate | date("d/m/Y") }}</span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-md-offset-2">
                                    <div class="form-group">
                                        <span>PAÍS: </span>
                                        <span>{{ userDetails.country_id ?: 'Desconocido' }}</span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-md-offset-2">
                                    <div class="form-group">
                                        <span>INSTITUCIÓN: </span>
                                        <span>{{ userDetails.institution_id ?: 'Desconocido' }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row row-cards">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Aceptados/ Fallidos</h3>
                        </div>
                        <div class="card-body">
                            <!-- BARRA CON ACEPTADOS % Y TIPOS DE ERRORES%
                            {% for submissionError in submissionErrorsTable %}
                                    <tr>
                                        <td>{{ submissionError.status }}</td>
                                        <td>{{ submissionError.name }}</td>
                                        <td class="text-left">{{ submissionError.totals }}</td>
                                        <td>
                                            <div class="progress progress-sm">
                                                {% set errorPercent = ((submissionError.totals / userDetails.TotalSubmissions) * 100) %}

                                                <div class="progress-bar bg-cyan-light"
                                                        style="width: {{ errorPercent | number_format(0, ',', '.') }}%">{{ errorPercent | number_format(2, ',', '.') }}%</div>
                                            </div>
                                            <div class="small text-muted text-center">{{ submissionError.totals }} / {{ userDetails.TotalSubmissions }}</div>
                                        </td>
                                    </tr>
                                {% endfor %}-->
                            <div class="progress progress-sm">
                                <div class="progress-bar bg-blue" style="width: 75%" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
                                    <span class="sr-only">65% Complete</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row row-cards">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Últimos envíos:</h3>
                        </div>
                        <div class="table-responsive">
                            <table class="table card-table table-striped table-vcenter">
                                <thead>
                                <tr>
                                    <th>Problema (ID)</th>
                                    <th class="text-center">Resultado</th>
                                    <th>Aciertos / Envíos</th>
                                    <th>Última fecha de envío</th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for attempt in lastAttempts %}
                                <tr>
                                    <td>
                                        <a href="{{ twg_func( 'base_url') }}problem/id/{{ attempt.problem_id }}"
                                                title="{{ attempt.problem_name ?: 'Nombre de problema desconocido' }}">
                                            {{ attempt.problem_name ?: 'Nombre de problema desconocido' }}({{ attempt.problem_id }})
                                        </a>
                                    </td>
                                    <td class="text-nowrap text-center">
                                        <span class="badge badge-{{ attempt.lastAttempt == 'AC' ? 'success' : 'danger' }}">
                                            {{ attempt.lastAttempt }}
                                        </span>
                                    </td>
                                    <td>
                                        <div class="progress progress-sm">
                                            {% set percent = attempt.totalAttempts == 0 ? 0 : ((attempt.totalAC / attempt.totalAttempts) * 100) %}
                                            <div class="progress-bar bg-cyan-light"
                                                    style="width: {{ percent | number_format(0, ',', '.') }}%">{{ percent | number_format(2, ',', '.') }}%</div>
                                        </div>
                                        <div class="small text-muted text-center">{{ attempt.totalAC }}/{{ attempt.totalAttempts }}</div>
                                    </td>
                                    <td class="text-nowrap">{{ attempt.last_date_attempt | date("d/m/Y H:i:s") }}</td>
                                </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row row-cards row-deck">
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Evolución de envíos</h4>
                        </div>
                        <div class="card-body">
                            <div id="chart-bar-attempsEvolution" style="height: 16rem; max-height: 256px; position: relative;" class="c3">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Problemas intentados</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <span class="tag tag-gray-dark">101</span>
                                <span class="tag tag-gray-dark">102</span>
                                <span class="tag tag-gray">103</span>
                                <span class="tag tag-gray">104</span>
                                <span class="tag tag-gray-dark">105</span>
                                <span class="tag tag-gray-dark">106</span>
                                <span class="tag tag-gray">107</span>
                                <span class="tag tag-gray-dark">108</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row row-cards row-deck">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Ranking problemas</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover table-outline table-vcenter text-nowrap card-table">
                                    <thead>
                                    <tr>
                                        <th>Problema (ID)</th>
                                        <th>Veredicto</th>
                                        <th class="text-center">AC / Envíos</th>
                                        <th>Fecha último envío</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for problem in problems %}
                                        <tr>

                                            <td>
                                                <div><a title="{{ problem.name }}"
                                                        href="{{ twg_func( 'base_url') }}problem/id/{{ problem.internalId }}">{{ problem.name ?: 'Problema desconocido' }} ({{ problem.internalId }})</a></div>
                                                <div class="small text-muted">
                                                    Propuesto desde: {{ problem.publicationDate | date("d/m/Y") }}
                                                </div>
                                            </td>

                                            <td class="text-nowrap text-center">
                                                <span class="badge badge-{{ attempt.lastAttempt == 'AC' ? 'success' : 'danger' }}">
                                                    {{ attempt.lastAttempt }}
                                                </span>
                                            </td>
                                            <td>
                                                <a title="{{ problem.name }}"
                                                   href="{{ twg_func( 'base_url') }}problem/id/{{ problem.internalId }}">
                                                    <div class="progress progress-sm">
                                                        <div class="progress-bar bg-cyan-light"
                                                             style="width: {{ ((problem.totalAC / problem.totalSubs) * 100) | number_format(0, ',', '.') }}%">{{ ((problem.totalAC / problem.totalSubs) * 100) | number_format(2, ',', '.') }}%</div>
                                                    </div>
                                                    <div class="small text-muted text-center">{{ problem.totalAC }} / {{ problem.totalSubs }}</div>
                                                </a>
                                            </td>

                                            <td class="text-nowrap">
                                                {{ attempt.last_date_attempt | date("d/m/Y H:i:s") }}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <script>
        require(['c3', 'jquery'], function(c3, $) {
            $(document).ready(function(){
                let submissionErrors = {{ submissionErrors | json_encode | raw }},
                    dataErrors = [];


                submissionErrors.map(function (userError) {
                    dataErrors.push([ userError.status, userError.totals]);
                });


                let chartErrors = c3.generate({
                    bindto: '#chart-pie-errors', // id of chart wrapper
                    data: {
                        columns: dataErrors,
                        type: 'pie', // default type of chart
                        colors: {
                            'data1': tabler.colors["blue-darker"],
                            'data2': tabler.colors["blue"],
                            'data3': tabler.colors["blue-light"],
                            'data4': tabler.colors["blue-lighter"]
                        },
                        names: {}
                    },
                    axis: {},
                    legend: {
                        show: true,
                    },
                    padding: {
                        bottom: 0,
                        top: 0
                    },
                });
            });
        });
    </script>

{% endblock %}
