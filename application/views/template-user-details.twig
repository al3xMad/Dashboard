{% extends theme_path ~ "/template-base.twig" %}

{% block head %}
    <link href="{{ twg_func( "base_url") }}assets/plugins/charts-c3/plugin.css" rel="stylesheet" />
    <script src="{{ twg_func( "base_url") }}assets/plugins/charts-c3/plugin.js"></script>
{% endblock %}

{% block content %}
    <main id="main" role="main" class="my-3 my-md-5">
        <div class="container">
            <div class="page-header">
                <h1 class="page-title">{{ pageTitle }}: {{ userName }}</h1>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3">
                                        {% set avatarId = avatarId + 1 %}
                                        <span class="avatar" style="width: 6rem; height: 6rem; width: 6rem; background-image: url({{ twg_func( 'base_url' ) }}assets/images/demo/faces/{{ avatarId }}.jpg)"></span>
                                </div>
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <span style="font-weight: 700;">NOMBRE: </span>
                                        <span>{{ userDetails.first_name ?: 'Desconocido' }}</span>
                                    </div>
                                    <div class="form-group">
                                        <span style="font-weight: 700;">APELLIDOS: </span>
                                        <span>{{ userDetails.last_name ?: 'Desconocido' }}</span>
                                    </div>
                                    <div class="form-group">
                                        <span style="font-weight: 700;">EMAIL: </span>
                                        <span>{{ userDetails.email }}</span>
                                    </div>
                                    <div class="form-group">
                                        <span style="font-weight: 700;">FECHA DE REGISTRO: </span>
                                        <span>{{ userDetails.registrationDate | date("d/m/Y") }}</span>
                                    </div>
                                    <div class="form-group">
                                        <span style="font-weight: 700;">PAÍS: </span>
                                        <span>{{ userDetails.country_id ?: 'Desconocido' }}</span>
                                    </div>
                                    <div class="form-group">
                                        <span style="font-weight: 700;">INSTITUCIÓN: </span>
                                        <span>{{ userDetails.institution_id ?: 'Desconocido' }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row row-cards">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Aceptados/ Fallidos</h3>
                        </div>
                        <div class="card-body">
                            <div class="col-sm-4">
                                <div id="chart-bar-errors" class="c3 text-center"></div>
                            </div>
                            <!-- BARRA CON ACEPTADOS % Y TIPOS DE ERRORES%-->
                            <!--como se añaden los aceptados??-->
                            <table class="table table-hover table-outline table-vcenter text-nowrap card-table">
                                <tbody>
                                {% for submissionError in submissionErrorsTable %}
                                    <tr>
                                        <td>{{ submissionError.status }}</td>
                                        <td>({{ submissionError.name }})</td>
                                        <td class="text-left"> - {{ submissionError.totals }} errores</td>
                                        <td>
                                            <div class="progress progress-sm">
                                                {% set errorPercent = ((submissionError.totals / userDetails.TotalSubmissions) * 100) %}
                                                <div class="progress-bar bg-cyan-light"
                                                     style="width: {{ errorPercent | number_format(0, ',', '.') }}%">{{ errorPercent | number_format(2, ',', '.') }}%</div>
                                            </div>
                                            <div class="small text-muted text-center">{{ submissionError.totals }} / {{ userDetails.TotalSubmissions }}</div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row row-cards">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Últimos envíos:</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                            <table id="lastAttemps" class="table card-table table-striped table-vcenter">
                                <thead>
                                <tr>
                                    <th>Problema (ID)</th>
                                    <th class="text-center">Resultado</th>
                                    <th>Aceptados /Envíos</th>
                                    <th>Última fecha de envío</th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for attempt in lastAttempts %}
                                <tr>
                                    <td>
                                        <a href="{{ twg_func( 'base_url') }}problem/id/{{ attempt.problem_id }}"
                                                title="{{ attempt.problem_name ?: 'Nombre de problema desconocido' }}">
                                            {{ attempt.problem_name ?: 'Nombre de problema desconocido' }}({{ attempt.problem_id }})
                                        </a>
                                    </td>
                                    <td class="text-nowrap text-center">
                                        <span class="badge badge-{{ attempt.lastAttempt == 'AC' ? 'success' : 'danger' }}">
                                            {{ attempt.lastAttempt }}
                                        </span>
                                    </td>
                                    <td>
                                        <div class="progress progress-sm">
                                            {% set percent = attempt.totalAttempts == 0 ? 0 : ((attempt.totalAC / attempt.totalAttempts) * 100) %}
                                            <div class="progress-bar bg-cyan-light"
                                                    style="width: {{ percent | number_format(0, ',', '.') }}%">{{ percent | number_format(2, ',', '.') }}%</div>
                                        </div>
                                        <div class="small text-muted text-center">{{ attempt.totalAC }}/{{ attempt.totalAttempts }}</div>
                                    </td>
                                    <td class="text-nowrap">{{ attempt.last_date_attempt | date("d/m/Y H:i:s") }}</td>
                                </tr>
                                {% endfor %}
                                </tbody>
                                <tfoot>
                                <tr>
                                    <th>Problema (ID)</th>
                                    <th class="text-center">Resultado</th>
                                    <th>Aceptados /Envíos</th>
                                    <th>Última fecha de envío</th>
                                </tr>
                                </tfoot>
                            </table>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row row-cards row-deck">
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Evolución de envíos</h4>
                        </div>
                        <div class="card-body">
                            <div id="chart-bar-attempsEv"
                                 style="height: 16rem; max-height: 256px; position: relative;" class="c3">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Problemas intentados</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                {% for problem in problems %}
                                    <span title="{{ problem.name }} - {{ problem.totalAC }} AC" class="tag tag-{{ problem.totalSubs == '0' ? 'grey' : 'green' }}">
                                        {{ problem.internalId }}
                                    </span>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row row-cards row-deck">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Ranking problemas</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="problemsTable" class="table table-hover table-outline table-vcenter text-nowrap card-table">
                                    <thead>
                                    <tr>
                                        <th>Problema (ID)</th>
                                        <th class="text-center">Resultado</th>
                                        <th class="text-center">Aceptados</th>
                                        <th class="text-center">Envíos</th>
                                        <th>Fecha último envío</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for problem in problemsRanking %}
                                        <tr>

                                            <td>
                                                <div><a title="{{ problem.name }}"
                                                        href="{{ twg_func( 'base_url') }}problem/id/{{ problem.internalId }}">{{ problem.name ?: 'Problema desconocido' }} ({{ problem.internalId }})</a></div>
                                                <div class="small text-muted">
                                                    Propuesto desde: {{ problem.publicationDate | date("d/m/Y") }}
                                                </div>
                                            </td>

                                            <td class="text-nowrap text-center">
                                                <span class="badge badge-{{ problem.last_status == 'AC' ? 'success' : 'danger' }}">
                                                    {{ problem.last_status }}
                                                </span>
                                            </td>
                                            <td class="text-nowrap text-center">{{ problem.totalAC }}</td>

                                            <td class="text-nowrap text-center">{{ problem.totalSubs }}</td>

                                            <td class="text-nowrap">
                                                {{ problem.last_date_attempt | date("d/m/Y H:i:s") }}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                    <tfoot>
                                    <tr>
                                        <th>Problema (ID)</th>
                                        <th class="text-center">Resultado</th>
                                        <th class="text-center">Aceptados</th>
                                        <th class="text-center">Envíos</th>
                                        <th>Fecha último envío</th>
                                    </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <script>
        require(['c3', 'jquery', 'datatables'], function(c3, $) {
            $(document).ready(function(){
                let submissionErrors = {{ submissionErrors | json_encode | raw }},
                    dataErrors = [];

                $('#lastAttemps').DataTable();
                $('#problemsTable').DataTable();

                submissionErrors.map(function (userError) {
                    dataErrors.push([ userError.status, userError.totals]);
                });


                let chartErrors = c3.generate({
                    bindto: '#chart-bar-errors', // id of bar wrapper
                    data: {
                        columns: dataErrors,
                        type: 'bar', // default type of bar
                        colors: {
                            'data1': tabler.colors["blue-darker"],
                            'data2': tabler.colors["blue"],
                            'data3': tabler.colors["blue-light"],
                            'data4': tabler.colors["blue-lighter"]
                        },
                        names: {}
                    },
                    axis: {},
                    legend: {
                        show: true,
                    },
                    padding: {
                        bottom: 0,
                        top: 0
                    },
                });

                let chartattempsEv = c3.generate({
                    bindto: '#chart-bar-attempsEv', // id of attemps evolution chart wrapper
                    data: {
                        columns: [
                            ['Enviados', {{ totalSubmissionsByMonthAndUserId }}],
                            ['Aceptados', {{ totalAcceptedByMonthAndUserId }}]
                        ],
                        type: 'bar', // default type of chart
                        colors: {
                            'Enviados': tabler.colors["blue-darker"],
                            'Aceptados': tabler.colors["blue"]
                        },
                        names: {}
                    },
                    bar: {
                        width: {
                            ratio: 0.5 // this makes bar width 50% of length between ticks
                        }
                    },
                    axis: {
                        x: {
                            type: 'category',
                            categories: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec']
                        },
                    },
                    padding: {
                        bottom: 0,
                        top: 0
                    },
                });
            });
        });
    </script>

{% endblock %}
